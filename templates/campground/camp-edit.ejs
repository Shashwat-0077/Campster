<% layout('layouts/boilerplate') %>

<div class="container w-50">
  <h1 class="text-center">Edit Campground</h1>
  <form
    action="/camp-edit/<%= _id %>?_method=PUT"
    method="POST"
    class="text-start needs-validation"
    enctype="multipart/form-data"
    novalidate
  >
    <label for="title" class="mt-1">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="camp[title]"
      required
      value="<%= title %>"
    />

    <label for="place" class="mt-1">Place</label>
    <input
      type="text"
      class="form-control"
      id="place"
      name="camp[place]"
      value="<%= place %>"
      required
    />

    <label for="state" class="mt-1">State</label>
    <input
      type="text"
      class="form-control"
      id="state"
      name="camp[state]"
      value="<%= state %>"
      required
    />

    <label for="images" class="mt-1">Add Images </label>
    <input
      type="file"
      name="images"
      id="images"
      class="form-control"
      multiple
      required
    />

    <label for="price" class="mt-1">Price</label>
    <div class="input-group mb-3">
      <span class="input-group-text">&#8377;</span>
      <input
        type="text"
        class="form-control"
        aria-label="Amount (to the nearest dollar)"
        name="camp[price]"
        value="<%= price %>"
        required
      />
    </div>

    <label for="description" class="mt-1">Description</label>
    <textarea
      class="form-control"
      id="description"
      aria-label="With textarea"
      name="camp[description]"
      required
    >
<%=description.trim()%></textarea
    >

    <button class="btn btn-info mt-3">Edit</button>
  </form>

  <a href="/campground/<%= _id %>">Back to details</a>
</div>
