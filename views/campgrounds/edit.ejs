<% layout('layouts/boilerplate')%>

<!-- Hero Section -->
<div class="relative overflow-hidden mb-12">
    <div
        class="absolute inset-0 bg-gradient-to-br from-accent-amber/10 to-accent-orange/10 rounded-3xl transform -skew-y-1 shadow-soft"
    ></div>
    <div class="relative z-10 text-center py-16 px-8">
        <div class="animate-fade-in">
            <h1
                class="text-5xl font-bold bg-gradient-to-r from-accent-orange to-accent-amber bg-clip-text text-transparent mb-4"
            >
                Edit Campground
            </h1>
            <p
                class="text-xl text-forest-600 max-w-2xl mx-auto leading-relaxed"
            >
                Update your campground details and keep your listing fresh for
                fellow adventurers
            </p>
            <div
                class="mt-4 inline-flex items-center px-4 py-2 bg-accent-orange/10 rounded-full text-accent-orange font-medium"
            >
                <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    ></path>
