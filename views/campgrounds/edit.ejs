                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="price"
                    >
                        <svg
                            class="w-4 h-4 text-accent-orange"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                            ></path>
                        </svg>
                        <span>Price per Night</span>
                    </label>
                    <div class="relative">
                        <div
                            class="absolute inset-y-0 left-0 flex items-center pl-4"
                        >
                            <span class="text-forest-500 font-semibold">$</span>
                        </div>
                        <input
                            type="text"
                            class="w-full pl-8 pr-4 py-3 border-2 border-forest-200 rounded-xl focus:border-accent-orange focus:ring-4 focus:ring-accent-orange/20 transition-all duration-200 text-forest-800 placeholder-forest-400"
                            id="price"
                            placeholder="25.00"
                            name="campground[price]"
                            value="<%=campground.price %>"
                            required
                        />
                    </div>
                    <div
                        class="mt-2 text-sm text-accent-orange opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ Adjust pricing based on seasonal demand
                    </div>
                </div>

                <!-- Description Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="description"
                    >
                        <svg
                            class="w-4 h-4 text-accent-orange"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h7"
                            ></path>
                        </svg>
                        <span>Description</span>
                    </label>
