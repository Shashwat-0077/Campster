<% layout('layouts/boilerplate')%>

<!-- Hero Section with Map -->
<div class="relative mb-12 animate-fade-in">
    <!-- Map Container -->
    <div class="relative rounded-2xl overflow-hidden shadow-soft bg-white p-2">
        <div id="map" class="w-full h-96 rounded-xl"></div>
        <div class="absolute top-6 left-6 z-10">
            <div
                class="bg-white/90 backdrop-blur-sm rounded-xl px-4 py-2 shadow-soft"
            >
                <h2 class="text-lg font-semibold text-forest-800 mb-1">
                    Discover Amazing Campgrounds
                </h2>
                <p class="text-sm text-forest-600">
                    Explore locations on the map
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Header Section -->
<div
    class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8 animate-slide-up"
>
    <div class="mb-6 lg:mb-0">
        <h1 class="text-4xl lg:text-5xl font-bold text-forest-800 mb-3">
            All Campgrounds
            <span
                class="inline-block w-2 h-2 bg-primary-500 rounded-full ml-2 animate-bounce-gentle"
            ></span>
        </h1>
        <p class="text-lg text-forest-600 max-w-2xl">
            Discover your perfect outdoor adventure from our curated collection
            of beautiful campgrounds.
        </p>
    </div>

    <!-- Add Campground Button -->
    <div class="flex-shrink-0">
        <a
            href="/campgrounds/new"
            class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl shadow-soft hover:shadow-glow transform hover:scale-105 transition-all duration-200"
        >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path
                    fill-rule="evenodd"
                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                    clip-rule="evenodd"
                />
            </svg>
            Add New Campground
        </a>
    </div>
</div>

<!-- Campgrounds Grid -->
<div class="grid gap-8 animate-slide-up" style="animation-delay: 0.2s">
    <% for (let campground of campgrounds){%>
    <div
        class="bg-white rounded-2xl shadow-soft hover:shadow-xl transition-all duration-300 overflow-hidden group"
    >
        <div class="lg:flex">
            <!-- Image Section -->
            <div class="lg:w-1/3 relative overflow-hidden">
                <div class="aspect-video lg:aspect-square relative">
                    <%if(campground.images.length) {%>
                    <img
                        class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        alt="<%= campground.title %>"
                        src="<%=campground.images[0].url%>"
                    />
                    <% }else {%>
                    <img
                        class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        alt="<%= campground.title %>"
                        src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png"
                    />
                    <% } %>

                    <!-- Overlay gradient -->
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    ></div>
                </div>

                <!-- Price badge (if you have pricing) -->
                <div class="absolute top-4 right-4">
                    <div
                        class="bg-white/90 backdrop-blur-sm text-forest-800 px-3 py-1 rounded-full text-sm font-semibold shadow-soft"
                    >
                        Featured
                    </div>
                </div>
            </div>

            <!-- Content Section -->
            <div class="lg:w-2/3 p-6 lg:p-8 flex flex-col justify-between">
                <div>
                    <!-- Title and Location -->
                    <div class="mb-4">
                        <h3
                            class="text-2xl font-bold text-forest-800 mb-2 group-hover:text-primary-700 transition-colors"
                        >
                            <%= campground.title %>
                        </h3>
                        <div class="flex items-center text-forest-600 mb-3">
                            <svg
                                class="w-4 h-4 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            <span class="text-sm font-medium"
                                ><%= campground.location%></span
                            >
                        </div>
                    </div>

                    <!-- Description -->
                    <p
                        class="text-forest-700 leading-relaxed mb-6 line-clamp-3"
                    >
                        <%= campground.description %>
                    </p>
                </div>

                <!-- Action Section -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <!-- Rating (if you have it) -->
                        <div class="flex items-center">
                            <div class="flex space-x-1">
                                <% for(let i = 0; i < 5; i++) { %>
                                <svg
                                    class="w-4 h-4 text-accent-amber fill-current"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                    />
                                </svg>
                                <% } %>
                            </div>
                            <span class="ml-2 text-sm text-forest-600"
                                >4.8</span
                            >
                        </div>

                        <!-- Amenities icons -->
                        <div class="flex items-center space-x-2">
                            <!-- WiFi icon -->
                            <div
                                class="w-8 h-8 bg-forest-100 rounded-full flex items-center justify-center"
                            >
                                <svg
                                    class="w-4 h-4 text-forest-600"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M17.778 8.222c-4.296-4.296-11.26-4.296-15.556 0A1 1 0 01.808 6.808c5.076-5.077 13.308-5.077 18.384 0a1 1 0 01-1.414 1.414zM14.95 11.05a7 7 0 00-9.9 0 1 1 0 01-1.414-1.414 9 9 0 0112.728 0 1 1 0 01-1.414 1.414zM12.12 13.88a3 3 0 00-4.242 0 1 1 0 01-1.415-1.415 5 5 0 017.072 0 1 1 0 01-1.415 1.415zM9 16a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                            </div>
                            <!-- Fire icon -->
                            <div
                                class="w-8 h-8 bg-accent-orange/10 rounded-full flex items-center justify-center"
                            >
                                <svg
                                    class="w-4 h-4 text-accent-orange"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- View Button -->
                    <a
                        class="inline-flex items-center px-6 py-2 bg-forest-800 hover:bg-primary-600 text-white font-semibold rounded-xl transition-all duration-200 hover:shadow-soft group-hover:transform group-hover:scale-105"
                        href="/campgrounds/<%=campground._id%>"
                    >
                        View Details
                        <svg
                            class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                clip-rule="evenodd"
                            />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<!-- Empty State (if no campgrounds) -->
<% if(campgrounds.length === 0) { %>
<div class="text-center py-16 animate-fade-in">
    <div class="max-w-md mx-auto">
        <div
            class="w-24 h-24 bg-forest-100 rounded-full flex items-center justify-center mx-auto mb-6"
        >
            <svg
                class="w-12 h-12 text-forest-400"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    fill-rule="evenodd"
                    d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z"
                    clip-rule="evenodd"
                />
            </svg>
        </div>
        <h3 class="text-2xl font-bold text-forest-800 mb-3">
            No Campgrounds Found
        </h3>
        <p class="text-forest-600 mb-6">
            Be the first to add a campground to our collection!
        </p>
        <a
            href="/campgrounds/new"
            class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl shadow-soft hover:shadow-glow transform hover:scale-105 transition-all duration-200"
        >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path
                    fill-rule="evenodd"
                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                    clip-rule="evenodd"
                />
            </svg>
            Add First Campground
        </a>
    </div>
</div>
<% } %>

<script>
    const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>

<style>
    /* Line clamp utility for description truncation */
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
