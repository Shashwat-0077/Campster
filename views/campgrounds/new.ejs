<% layout('layouts/boilerplate')%>

<!-- Hero Section -->
<div class="relative overflow-hidden mb-12">
    <div
        class="absolute inset-0 bg-gradient-to-br from-primary-50 to-forest-100 rounded-3xl transform -skew-y-1 shadow-soft"
    ></div>
    <div class="relative z-10 text-center py-16 px-8">
        <div class="animate-fade-in">
            <h1
                class="text-5xl font-bold bg-gradient-to-r from-primary-600 to-forest-700 bg-clip-text text-transparent mb-4"
            >
                Create New Campground
            </h1>
            <p
                class="text-xl text-forest-600 max-w-2xl mx-auto leading-relaxed"
            >
                Share your favorite camping spot with the community and help
                fellow adventurers discover amazing outdoor experiences
            </p>
        </div>
    </div>
</div>

<!-- Main Form Container -->
<div class="max-w-4xl mx-auto">
    <div
        class="bg-white rounded-3xl shadow-soft border border-forest-200/50 overflow-hidden animate-slide-up"
    >
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-primary-500 to-primary-600 px-8 py-6">
            <div class="flex items-center space-x-3">
                <div
                    class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center"
                >
                    <svg
                        class="w-5 h-5 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                        ></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-semibold text-white">
                    Campground Details
                </h2>
            </div>
        </div>

        <!-- Form Content -->
        <div class="p-8">
            <form
                action="/campgrounds"
                method="POST"
                novalidate
                class="validated-form space-y-8"
                enctype="multipart/form-data"
            >
                <!-- Title Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="title"
                    >
                        <svg
                            class="w-4 h-4 text-primary-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.997 1.997 0 013 12V7a4 4 0 014-4z"
                            ></path>
                        </svg>
                        <span>Campground Title</span>
                    </label>
                    <input
                        class="w-full px-4 py-3 border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 transition-all duration-200 text-forest-800 placeholder-forest-400"
                        type="text"
                        id="title"
                        name="campground[title]"
                        placeholder="Enter a memorable name for your campground"
                        required
                    />
                    <div
                        class="mt-2 text-sm text-primary-600 opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ Give your campground a catchy, descriptive name
                    </div>
                </div>

                <!-- Location Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="location"
                    >
                        <svg
                            class="w-4 h-4 text-primary-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                            ></path>
                        </svg>
                        <span>Location</span>
                    </label>
                    <input
                        class="w-full px-4 py-3 border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 transition-all duration-200 text-forest-800 placeholder-forest-400"
                        type="text"
                        id="location"
                        name="campground[location]"
                        placeholder="City, State or specific address"
                        required
                    />
                    <div
                        class="mt-2 text-sm text-primary-600 opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ Be as specific as possible to help campers find your
                        spot
                    </div>
                </div>

                <!-- Price Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="price"
                    >
                        <svg
                            class="w-4 h-4 text-primary-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                            ></path>
                        </svg>
                        <span>Price per Night</span>
                    </label>
                    <div class="relative">
                        <div
                            class="absolute inset-y-0 left-0 flex items-center pl-4"
                        >
                            <span class="text-forest-500 font-semibold">$</span>
                        </div>
                        <input
                            type="text"
                            class="w-full pl-8 pr-4 py-3 border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 transition-all duration-200 text-forest-800 placeholder-forest-400"
                            id="price"
                            placeholder="25.00"
                            name="campground[price]"
                            required
                        />
                    </div>
                    <div
                        class="mt-2 text-sm text-primary-600 opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ Set a fair price that reflects the value and amenities
                    </div>
                </div>

                <!-- Description Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="description"
                    >
                        <svg
                            class="w-4 h-4 text-primary-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h7"
                            ></path>
                        </svg>
                        <span>Description</span>
                    </label>
                    <textarea
                        class="w-full px-4 py-3 border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 transition-all duration-200 text-forest-800 placeholder-forest-400 min-h-[120px] resize-y"
                        id="description"
                        name="campground[description]"
                        placeholder="Describe the campground's features, amenities, nearby attractions, and what makes it special..."
                        required
                    ></textarea>
                    <div
                        class="mt-2 text-sm text-primary-600 opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ Include details about facilities, activities, and
                        unique features
                    </div>
                </div>

                <!-- Image Upload Field -->
                <div class="group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-3 flex items-center space-x-2"
                        for="image"
                    >
                        <svg
                            class="w-4 h-4 text-primary-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <span>Upload Images</span>
                    </label>
                    <div class="relative">
                        <input
                            type="file"
                            class="hidden"
                            id="image"
                            name="image"
                            multiple
                            accept="image/*"
                        />
                        <label
                            for="image"
                            class="block w-full p-8 border-2 border-dashed border-forest-300 rounded-xl hover:border-primary-400 hover:bg-primary-50/50 transition-all duration-200 cursor-pointer group-hover:shadow-soft"
                        >
                            <div class="text-center">
                                <svg
                                    class="mx-auto h-12 w-12 text-forest-400 mb-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                                    ></path>
                                </svg>
                                <p class="text-forest-600 font-medium mb-2">
                                    Click to upload images or drag and drop
                                </p>
                                <p class="text-sm text-forest-500">
                                    PNG, JPG, GIF up to 10MB each
                                </p>
                                <p class="text-xs text-forest-400 mt-1">
                                    You can select multiple images
                                </p>
                            </div>
                        </label>
                    </div>
                    <div
                        class="mt-2 text-sm text-primary-600 opacity-0 group-focus-within:opacity-100 transition-opacity"
                    >
                        ✓ High-quality photos help attract more campers
                    </div>
                </div>

                <!-- Action Buttons -->
                <div
                    class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-forest-200"
                >
                    <button
                        type="submit"
                        class="flex-1 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold py-4 px-8 rounded-xl hover:from-primary-600 hover:to-primary-700 transform hover:scale-105 hover:shadow-glow transition-all duration-200 flex items-center justify-center space-x-2"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                            ></path>
                        </svg>
                        <span>Create Campground</span>
                    </button>

                    <a
                        href="/campgrounds"
                        class="flex-1 sm:flex-none bg-forest-100 hover:bg-forest-200 text-forest-700 font-semibold py-4 px-8 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2 border border-forest-200"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"
                            ></path>
                        </svg>
                        <span>Back to All Campgrounds</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tips Section -->
    <div
        class="mt-12 bg-gradient-to-br from-accent-orange/10 to-accent-amber/10 rounded-2xl p-8 border border-accent-orange/20"
    >
        <h3
            class="text-xl font-semibold text-forest-800 mb-4 flex items-center space-x-2"
        >
            <svg
                class="w-5 h-5 text-accent-orange"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                ></path>
            </svg>
            <span>Pro Tips for Great Campground Listings</span>
        </h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
            <div class="flex items-start space-x-3">
                <div
                    class="w-2 h-2 bg-accent-orange rounded-full mt-2 flex-shrink-0"
                ></div>
                <p class="text-forest-700">
                    Use high-quality, well-lit photos that showcase the best
                    features of your campground
                </p>
            </div>
            <div class="flex items-start space-x-3">
                <div
                    class="w-2 h-2 bg-accent-orange rounded-full mt-2 flex-shrink-0"
                ></div>
                <p class="text-forest-700">
                    Include details about amenities like restrooms, fire pits,
                    picnic tables, and water access
                </p>
            </div>
            <div class="flex items-start space-x-3">
                <div
                    class="w-2 h-2 bg-accent-orange rounded-full mt-2 flex-shrink-0"
                ></div>
                <p class="text-forest-700">
                    Mention nearby attractions, hiking trails, or activities to
                    attract more visitors
                </p>
            </div>
            <div class="flex items-start space-x-3">
                <div
                    class="w-2 h-2 bg-accent-orange rounded-full mt-2 flex-shrink-0"
                ></div>
                <p class="text-forest-700">
                    Set competitive pricing by researching similar campgrounds
                    in your area
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Custom JavaScript for enhanced interactions -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // File input enhancement
        const fileInput = document.getElementById("image");
        const fileLabel = fileInput.nextElementSibling;

        fileInput.addEventListener("change", function () {
            const fileCount = this.files.length;
            const labelText = fileLabel.querySelector("p");

            if (fileCount > 0) {
                labelText.textContent = `${fileCount} image${
                    fileCount > 1 ? "s" : ""
                } selected`;
                fileLabel.classList.add("border-primary-400", "bg-primary-50");
            } else {
                labelText.textContent =
                    "Click to upload images or drag and drop";
                fileLabel.classList.remove(
                    "border-primary-400",
                    "bg-primary-50"
                );
            }
        });

        // Drag and drop functionality
        fileLabel.addEventListener("dragover", function (e) {
            e.preventDefault();
            this.classList.add("border-primary-400", "bg-primary-50");
        });

        fileLabel.addEventListener("dragleave", function (e) {
            e.preventDefault();
            if (!fileInput.files.length) {
                this.classList.remove("border-primary-400", "bg-primary-50");
            }
        });

        fileLabel.addEventListener("drop", function (e) {
            e.preventDefault();
            fileInput.files = e.dataTransfer.files;
            fileInput.dispatchEvent(new Event("change"));
        });

        // Form validation enhancements
        const form = document.querySelector(".validated-form");
        const inputs = form.querySelectorAll(
            "input[required], textarea[required]"
        );

        inputs.forEach((input) => {
            input.addEventListener("blur", function () {
                if (this.value.trim()) {
                    this.classList.add("border-primary-500");
                    this.classList.remove("border-red-500");
                } else {
                    this.classList.add("border-red-500");
                    this.classList.remove("border-primary-500");
                }
            });
        });
    });
</script>
