<% layout('layouts/boilerplate')%>

<!-- Modern Error Page -->
<div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="max-w-2xl w-full">
        <!-- Main Error Container -->
        <div
            class="bg-white rounded-2xl shadow-soft border border-red-100 overflow-hidden animate-fade-in"
        >
            <!-- Error Header -->
            <div class="bg-gradient-to-r from-red-500 to-red-600 px-8 py-6">
                <div class="flex items-center space-x-4">
                    <!-- Error Icon -->
                    <div class="bg-white/20 p-3 rounded-full">
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-white">
                            Oops! Something went wrong
                        </h1>
                        <p class="text-red-100 mt-1">
                            We encountered an unexpected error
                        </p>
                    </div>
                </div>
            </div>

            <!-- Error Content -->
            <div class="p-8">
                <!-- Error Message -->
                <div
                    class="bg-red-50 border border-red-200 rounded-xl p-6 mb-6"
                >
                    <h2 class="text-lg font-semibold text-red-800 mb-2">
                        Error Details
                    </h2>
                    <p class="text-red-700 text-base leading-relaxed">
                        <%=err.message%>
                    </p>
                </div>

                <!-- Stack Trace (Development Mode) -->
                <% if (process.env.NODE_ENV !== 'production') { %>
                <div
                    class="bg-gray-50 border border-gray-200 rounded-xl p-6 mb-6"
                >
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-800">
                            Stack Trace
                        </h3>
                        <button
                            onclick="toggleStackTrace()"
                            class="text-sm text-primary-600 hover:text-primary-700 font-medium"
                        >
                            Toggle Details
                        </button>
                    </div>
                    <pre
                        id="stackTrace"
                        class="text-sm text-gray-700 bg-white p-4 rounded-lg border overflow-x-auto hidden"
                    >
<%=err.stack%></pre
                    >
                </div>
                <% } %>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <button
                        onclick="history.back()"
                        class="px-6 py-3 bg-primary-600 text-white rounded-xl hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 font-medium shadow-lg hover:shadow-xl"
                    >
                        <svg
                            class="w-5 h-5 inline mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"
                            ></path>
                        </svg>
                        Go Back
                    </button>

                    <a
                        href="/"
                        class="px-6 py-3 bg-white text-primary-600 border-2 border-primary-600 rounded-xl hover:bg-primary-50 transform hover:scale-105 transition-all duration-200 font-medium text-center"
                    >
                        <svg
                            class="w-5 h-5 inline mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                            ></path>
                        </svg>
                        Return Home
                    </a>
                </div>
            </div>
        </div>

        <!-- Helpful Tips -->
        <div
            class="mt-8 bg-blue-50 border border-blue-200 rounded-xl p-6 animate-slide-up"
        >
            <h3 class="text-lg font-semibold text-blue-800 mb-3">Need Help?</h3>
            <ul class="text-blue-700 space-y-2">
                <li class="flex items-start">
                    <span class="text-blue-500 mr-2">•</span>
                    Try refreshing the page or going back to the previous page
                </li>
                <li class="flex items-start">
                    <span class="text-blue-500 mr-2">•</span>
                    Check if the URL is correct and try again
                </li>
                <li class="flex items-start">
                    <span class="text-blue-500 mr-2">•</span>
                    If the problem persists, please contact our support team
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    function toggleStackTrace() {
        const stackTrace = document.getElementById("stackTrace");
        stackTrace.classList.toggle("hidden");
    }
</script>
