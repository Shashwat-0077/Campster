<% layout('layouts/boilerplate')%>

<div
    class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
>
    <div class="max-w-md w-full space-y-8">
        <!-- Header Section -->
        <div class="text-center">
            <div
                class="mx-auto h-16 w-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center shadow-glow mb-6 animate-bounce-gentle"
            >
                <svg
                    class="w-8 h-8 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                    />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-forest-900 mb-2">
                Welcome Back
            </h1>
            <p class="text-forest-600">
                Sign in to explore amazing camping adventures
            </p>
        </div>

        <!-- Form Card -->
        <div
            class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-soft p-8 border border-white/20 relative overflow-hidden"
        >
            <!-- Decorative Elements -->
            <div
                class="absolute top-0 right-0 w-20 h-20 bg-primary-100 rounded-full -translate-y-10 translate-x-10 opacity-50"
            ></div>
            <div
                class="absolute bottom-0 left-0 w-16 h-16 bg-accent-orange/10 rounded-full translate-y-8 -translate-x-8 opacity-50"
            ></div>

            <form
                action="/login"
                method="POST"
                class="validated-form space-y-6 relative z-10"
                novalidate
            >
                <!-- Username Field -->
                <div class="form-group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-2"
                        for="username"
                    >
                        Username
                        <span class="text-red-500">*</span>
                    </label>
                    <div class="relative group">
                        <input
                            type="text"
                            id="username"
                            name="username"
                            required
                            placeholder="Enter your username"
                            class="w-full px-4 py-3 pl-12 bg-white border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 outline-none transition-all duration-200 placeholder-forest-400 group-hover:border-forest-300"
                        />
                        <div
                            class="absolute inset-y-0 left-0 flex items-center pl-3"
                        >
                            <svg
                                class="w-5 h-5 text-forest-400 group-focus-within:text-primary-500 transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                />
                            </svg>
                        </div>
                    </div>
                    <div
                        class="valid-feedback mt-2 text-sm text-primary-600 font-medium opacity-0 transition-all duration-200"
                        id="username-valid"
                    >
                        <div class="flex items-center">
                            <svg
                                class="w-4 h-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            Looks good!
                        </div>
                    </div>
                    <div
                        class="invalid-feedback mt-2 text-sm text-red-600 font-medium hidden transition-all duration-200"
                        id="username-error"
                    >
                        <div class="flex items-center">
                            <svg
                                class="w-4 h-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            Username must be at least 3 characters long
                        </div>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label
                        class="block text-sm font-semibold text-forest-700 mb-2"
                        for="password"
                    >
                        Password
                        <span class="text-red-500">*</span>
                    </label>
                    <div class="relative group">
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            placeholder="Enter your password"
                            class="w-full px-4 py-3 pl-12 pr-12 bg-white border-2 border-forest-200 rounded-xl focus:border-primary-500 focus:ring-4 focus:ring-primary-100 outline-none transition-all duration-200 placeholder-forest-400 group-hover:border-forest-300"
                        />
                        <div
                            class="absolute inset-y-0 left-0 flex items-center pl-3"
                        >
                            <svg
                                class="w-5 h-5 text-forest-400 group-focus-within:text-primary-500 transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                />
                            </svg>
                        </div>
                        <button
                            type="button"
                            class="absolute inset-y-0 right-0 flex items-center pr-3 text-forest-400 hover:text-forest-600 transition-colors focus:outline-none"
                            onclick="toggleLoginPassword()"
                        >
                            <svg
                                id="login-eye-open"
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                />
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                />
                            </svg>
                            <svg
                                id="login-eye-closed"
                                class="w-5 h-5 hidden"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"
                                />
                            </svg>
                        </button>
                    </div>
                    <div
                        class="valid-feedback mt-2 text-sm text-primary-600 font-medium opacity-0 transition-all duration-200"
                        id="password-valid"
                    >
                        <div class="flex items-center">
                            <svg
                                class="w-4 h-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            Password looks good!
                        </div>
                    </div>
                    <div
                        class="invalid-feedback mt-2 text-sm text-red-600 font-medium hidden transition-all duration-200"
                        id="password-error"
                    >
                        <div class="flex items-center">
                            <svg
                                class="w-4 h-4 mr-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            Password is required
                        </div>
                    </div>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input
                            id="remember-me"
                            name="remember-me"
                            type="checkbox"
                            class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-forest-300 rounded transition-colors"
                        />
                        <label
                            for="remember-me"
                            class="ml-2 block text-sm text-forest-700"
                        >
                            Remember me
                        </label>
                    </div>
                    <div class="text-sm">
                        <a
                            href="/forgot-password"
                            class="font-medium text-primary-600 hover:text-primary-700 transition-colors duration-200"
                        >
                            Forgot password?
                        </a>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-2">
                    <button
                        type="submit"
                        class="group relative w-full bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-semibold py-3 px-6 rounded-xl shadow-lg hover:shadow-glow transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-4 focus:ring-primary-200 disabled:opacity-50 disabled:cursor-not-allowed"
                        id="login-btn"
                    >
                        <span class="flex items-center justify-center">
                            <svg
                                class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                                />
                            </svg>
                            <span id="login-text">Sign In</span>
                            <div
                                id="login-spinner"
                                class="hidden animate-spin ml-2"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                >
                                    <circle
                                        class="opacity-25"
                                        cx="12"
                                        cy="12"
                                        r="10"
                                        stroke="currentColor"
                                        stroke-width="4"
                                    ></circle>
                                    <path
                                        class="opacity-75"
                                        fill="currentColor"
                                        d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                    ></path>
                                </svg>
                            </div>
                        </span>
                    </button>
                </div>

                <!-- Divider -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-forest-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-forest-500"
                            >New to Campster?</span
                        >
                    </div>
                </div>

                <!-- Register Link -->
                <div class="text-center">
                    <a
                        href="/register"
                        class="inline-flex items-center px-6 py-3 border border-forest-300 rounded-xl text-sm font-medium text-forest-700 bg-white hover:bg-forest-50 hover:border-primary-300 transition-all duration-200 group"
                    >
                        <svg
                            class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
                            />
                        </svg>
                        Create new account
                    </a>
                </div>
            </form>
        </div>

        <!-- Security Notice -->
        <div class="text-center">
            <p class="text-xs text-forest-500 flex items-center justify-center">
                <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                    />
                </svg>
                Your connection is secure and encrypted
            </p>
        </div>
    </div>
</div>

<script>
    // Password visibility toggle
    function toggleLoginPassword() {
        const passwordInput = document.getElementById("password");
        const eyeOpen = document.getElementById("login-eye-open");
        const eyeClosed = document.getElementById("login-eye-closed");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeOpen.classList.add("hidden");
            eyeClosed.classList.remove("hidden");
        } else {
            passwordInput.type = "password";
            eyeOpen.classList.remove("hidden");
            eyeClosed.classList.add("hidden");
        }
    }

    // Enhanced login form validation
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector(".validated-form");
        const usernameInput = document.getElementById("username");
        const passwordInput = document.getElementById("password");
        const loginBtn = document.getElementById("login-btn");
        const loginText = document.getElementById("login-text");
        const loginSpinner = document.getElementById("login-spinner");

        // Username validation
        usernameInput.addEventListener("blur", function () {
            validateUsername();
        });

        usernameInput.addEventListener("input", function () {
            if (this.classList.contains("border-red-500")) {
                validateUsername();
            }
        });

        // Password validation
        passwordInput.addEventListener("blur", function () {
            validatePassword();
        });

        passwordInput.addEventListener("input", function () {
            if (this.classList.contains("border-red-500")) {
                validatePassword();
            }
        });

        // Form submission with loading state
        form.addEventListener("submit", function (e) {
            const isUsernameValid = validateUsername();
            const isPasswordValid = validatePassword();

            if (!isUsernameValid || !isPasswordValid) {
                e.preventDefault();
                return;
            }

            // Show loading state
            loginBtn.disabled = true;
            loginText.textContent = "Signing In...";
            loginSpinner.classList.remove("hidden");
        });

        function validateUsername() {
            const input = usernameInput;
            const validFeedback = document.getElementById("username-valid");
            const errorFeedback = document.getElementById("username-error");
            const isValid = input.value.trim().length >= 3;

            if (isValid) {
                input.classList.remove("border-red-500");
                input.classList.add("border-primary-500");
                validFeedback.classList.remove("opacity-0");
                validFeedback.classList.add("opacity-100");
                errorFeedback.classList.add("hidden");
            } else if (input.value.trim() !== "") {
                input.classList.remove(
                    "border-primary-500",
                    "border-forest-200"
                );
                input.classList.add("border-red-500");
                validFeedback.classList.remove("opacity-100");
                validFeedback.classList.add("opacity-0");
                errorFeedback.classList.remove("hidden");
            } else {
                input.classList.remove("border-red-500", "border-primary-500");
                input.classList.add("border-forest-200");
                validFeedback.classList.add("opacity-0");
                errorFeedback.classList.add("hidden");
            }

            return isValid;
        }

        function validatePassword() {
            const input = passwordInput;
            const validFeedback = document.getElementById("password-valid");
            const errorFeedback = document.getElementById("password-error");
            const isValid = input.value.length >= 4;

            if (isValid) {
                input.classList.remove("border-red-500");
                input.classList.add("border-primary-500");
                validFeedback.classList.remove("opacity-0");
                validFeedback.classList.add("opacity-100");
                errorFeedback.classList.add("hidden");
            } else if (input.value !== "") {
                input.classList.remove(
                    "border-primary-500",
                    "border-forest-200"
                );
                input.classList.add("border-red-500");
                validFeedback.classList.remove("opacity-100");
                validFeedback.classList.add("opacity-0");
                errorFeedback.classList.remove("hidden");
            } else {
                input.classList.remove("border-red-500", "border-primary-500");
                input.classList.add("border-forest-200");
                validFeedback.classList.add("opacity-0");
                errorFeedback.classList.add("hidden");
            }

            return isValid;
        }

        // Auto-focus first input
        usernameInput.focus();

        // Enter key navigation
        usernameInput.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
                passwordInput.focus();
                e.preventDefault();
            }
        });
    });
</script>
